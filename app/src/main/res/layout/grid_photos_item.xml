<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_button_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/photo_item"
        android:stateListAnimator="@null"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="39dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/item_button_view"
        app:layout_constraintTop_toTopOf="@+id/item_button_view"
        app:srcCompat="@drawable/add_photo" />

    <ImageView
        android:id="@+id/item_photo_view"
        android:layout_width="102sp"
        android:layout_height="102sp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/change_photo"
        android:layout_width="26sp"
        android:layout_height="26sp"
        android:background="@drawable/change_photo_item_noactive"
        android:scaleType="fitStart"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/item_photo_view"
        app:layout_constraintTop_toTopOf="@+id/item_button_view"
        app:srcCompat="@drawable/unlock_photo" />

</android.support.constraint.ConstraintLayout>